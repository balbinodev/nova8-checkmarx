{
    "version": 1.0,
    "project": "nova8-checkmarx",
    "team": "CxServer/SP/Partners/Nova8",
    "sast": {
      "preset": "High and Medium and Low",
      "incremental": "true",
      "fileExcludes": "*.pyc, *.test, *.class",
      "folderExcludes": "*test, out/, *bin"
    },
    "additionalProperties": {
      "cxFlow": {
        "application": "nova8-checkmarx test config",
        "branches": ["develop", "main", "master"],
        "emails": ["rodrigo.balbino@nova-8.com"],
        "thresholds": {
          "high": 10,
          "medium": 10,
          "low": 10
        },
        "filters": {
          "severity": ["High", "Medium"],
          "status": ["New", "Recurring"],
          "state": ["Confirmed", "To Verify"]
        }
      }
    }
  }